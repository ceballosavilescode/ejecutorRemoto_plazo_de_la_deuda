import os
carpeta = "plazodeladeuda"
if not os.path.exists(carpeta):
  os.makedirs(carpeta)
  print(f'Carpeta "{carpeta}" creada.')
else:
  print(f'La carpeta "{carpeta}" ya existe.')


# Ruta absoluta o relativa correcta
